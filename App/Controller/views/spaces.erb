<!DOCTYPE html>
<html lang="en" dir="ltr">
  <head>
    <meta charset="utf-8">
    <title>Create a space</title>
  </head>
  <body>
  <% require 'sinatra/flash' %>

    <h2>
      <%= flash[:notice] %>
    </h2>
    <h1> Create a space </h1>
    <% if @user %>
    User: <%= @user.email %>
    <% end %>
    <form action="/spaces" method="post">
      <label for="name_of_space">
        Space name
        <input type="text" name="name_of_space">
      </label>
      <label for="address_of_space">
        Address
        <input type="text" name="address_of_space">
      </label>
      <label for="price_of_space">
        Price
        <input type="text" name="price_of_space">
      </label>
      <label for="description_of_space">
        Description
        <input type="text" name="description_of_space">
      </label>
      <input type="submit" value="Create space">
    </form>
    <form action="/homepage" method="get">
      <input type="submit" value="Back to homepage">
    </form>
    <form action="/spaces" method="post">
      <input type="submit" value="Delete space">
    </form>
    <form action="/spaces" method="post">
      <input type="submit" value="Update">
    </form>
    <% if @space_list %>
        <div id="created_list">
  
      <% @space_list.map do |space|%>
      <ul id="<%= space.id %>">

        <li>Space name: <%= space.name %></li>
        <li>Address: <%= space.address%>
        <li>Price: <%= space.price %>
        <li>Description: <%= space.description%> </li>
      
        <form action="/list_a_space" method="post">
        <select name="list_date">
          <option value="1">Thursday 25th October</option>
          <option value="2">Friday 26th October</option>
          <option value="3">Saturday 27th October</option>
          <option value="4">Sunday 28th October</option>
          <option value="5">Monday 29th October</option>
          <option value="6">Tuesday 30th October</option>
          <option value="7">Wednesday 31th October</option> 
         </select>
         <input type='hidden' name='space_id' value="<%= space.id %>">
          <input type="submit" value="List">
        </form>

        <% end %>

      </ul>
       
      <% end %>
  
    </div>
  </body>
</html>
